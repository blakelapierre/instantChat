[Unit]
Description=broadcaster@%i.service

After=etcd.service
After=fleet.service
After=docker.service
After=collectd.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartpre=-/usr/bin/docker pull instantchat/broadcaster
ExecStart=/usr/bin/docker run --name=%n --rm --privileged instantchat/broadcaster
ExecStop=/usr/bin/docker stop %n

[X-Fleet]
MachineMetadata=role=broadcaster